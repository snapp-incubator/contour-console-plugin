{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "SecureRoute": {
      "title": "Security",
      "type": "object",
      "properties": {
        "secureRoute": {
          "title": "Secure Route",
          "type": "boolean"
        }
      },
      "dependencies": {
        "secureRoute": {
          "oneOf": [
            {
              "properties": {
                "secureRoute": { "const": true },
                "termination": {
                  "title": "TLS termination",
                  "type": "string",
                  "enum": [
                    { "label": "Edge", "value": "edge" },
                    { "label": "Passthrough", "value": "passthrough" },
                    { "label": "Re-encrypt", "value": "re-encrypt" }
                  ],
                  "default": "Edge"
                },
                "permitInsecureStatus": {
                  "title": "Insecure traffic",
                  "type": "string",
                  "enum": [
                    { "label": "None", "value": false },
                    { "label": "Allow", "value": true }
                  ],
                  "default": false
                },
                "secrets": {
                  "title": "Secrets",
                  "type": "string",
                  "enum": [],
                  "default": "openshift-ingress/letsencrypt"
                }
              },
              "required": ["termination"]
            },
            {
              "properties": {
                "secureRoute": { "const": false }
              }
            }
          ]
        }
      }
    },
    "proxy": {
      "title": "HTTP Proxy type",
      "type": "string",
      "enum": [],
      "default": "public"
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "title": "Name"
    },
    "ingressClassName": {
      "$ref": "#/definitions/proxy"
    },
    "fqdn": {
      "type": "string",
      "title": "Hostname (Fqdn)"
    },
    "prefix": {
      "type": "string",
      "title": "Path",
      "default": "/"
    },
    "services": {
      "type": "array",
      "title": "Services",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "Service Name",
            "enum": []
          },
          "weight": {
            "type": "number",
            "title": "Service weight",
            "default": 100
          },
          "port": {
            "type": "string",
            "title": "Target Port",
            "enum": []
          },
          "enableUpstreamTLS": {
            "type": "boolean",
            "title": "UpStream TLS",
            "default": false
          }
        },
        "required": ["name", "port", "weight"],
        "dependencies": {
          "enableUpstreamTLS": {
            "oneOf": [
              {
                "properties": {
                  "enableUpstreamTLS": { "const": true },
                  "caSecret": {
                    "type": "string",
                    "title": "Secret",
                    "enum": []
                  },
                  "subjectName": {
                    "type": "string",
                    "title": "Subject Name"
                  }
                },
                "required": ["caSecret", "subjectName"]
              },
              {
                "properties": {
                  "enableUpstreamTLS": { "const": false }
                }
              }
            ]
          }
        }
      }
    },
    "conditional": {
      "$ref": "#/definitions/SecureRoute"
    }
  },
  "required": ["name", "fqdn", "ingressClassName"]
}
