{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/components/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2020",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "strict": false,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "include": ["src"]
}
